        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>

        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %><br>

        <%= f.submit 'Submit', class: "btn btn-default" %><br>

    <% end %>

    <%= link_to 'Back', user_path(@playdate.user) %> | <%= link_to 'Delete', @playdate, method: :delete %>
  </div>
</div>
