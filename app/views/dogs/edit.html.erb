<h2 class="text-center">Edit dog</h2>

<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-1 col-md-4 col-md-offset-4">
    <%= form_for :dog, method: :patch, url: {action: 'update'} do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :breed %>
      <%= f.text_field :breed, class: 'form-control' %>

      <%= f.label :age %>
      <%= f.text_field :age, class: 'form-control' %>

      <%= f.label :sex %>
      <%= f.text_field :sex, class: 'form-control' %>

      <%= f.label :vaccinated %>
      <%= f.text_field :vaccinated, class: 'form-control' %>

      <%= f.label :neutered %>
      <%= f.text_field :neutered, class: 'form-control' %>

      <%= f.label :weight %>
      <%= f.text_field :weight, class: 'form-control' %>

      <%= f.label :temperament %>
      <%= f.text_field :temperament, class: 'form-control' %><br>

      <%= f.submit "Submit", class: "btn btn-default" %>
    <% end %>

  </div>
</div>
