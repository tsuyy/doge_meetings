<header>

  <div class='container'>
    <ul class="navbar-nav list-unstyled pull-right">
      <% if logged_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-bars" aria-hidden="true"></i>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to current_user do %>
                <i class="fa fa-paw" aria-hidden="true"></i> Profile
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_path(current_user) do %>
                <i class="fa fa-wrench" aria-hidden="true"></i> Settings
              <% end %>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to "Log out", logout_path, method: "delete" %>
            </li>
          </ul>
        </li>
      <% else %>
        <div class='before-sign-in'>
          <%= link_to "Log in", login_path %>  |  <%= link_to "Sign up", new_user_path %>
        </div>
      <% end %>
    </ul>

    <%= link_to root_path do %>
      <h1 class='text-center'><i class="fa fa-paw" aria-hidden="true"></i> dOGE MEETINGS</h1>
    <% end %>
  </div>

</header>
