<header>

  <div class='container'>
    <ul class="navbar-nav list-unstyled pull-left">
      <% if logged_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-bars" aria-hidden="true"></i>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to current_user do %>
                <i class="fa fa-paw" aria-hidden="true"></i> Profile
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_path(current_user) do %>
                <i class="fa fa-wrench" aria-hidden="true"></i> Settings
              <% end %>
            </li>
            <li>
              <%= link_to dogs_path do %>
                üê∂ Dogs
              <% end %>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to "Log out", logout_path, method: "delete" %>
            </li>
          </ul>
        </li>
      <% else %>
        <div class='before-sign-in'>
          <%= link_to "Log in", login_path %>  |  <%= link_to "Sign up", new_user_path %>
        </div>
      <% end %>
    </ul>


    <h1 class='text-center'>
      <%= link_to root_path do %>
        üêæ dOGE MEETINGS
      <% end %>
    </h1>
  </div>
  <% flash.each do |name, message| %>
    <!-- you're wrapping a lot of similar-looking stuff in your if-else.
    You could just if-else that class. -->
    <% if flash[:success] %>
      <div class="flash text-center bg-success">
        <%= message %>
      </div>
    <% else %>
      <div class="flash text-center bg-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
</header><br>
