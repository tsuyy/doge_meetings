
<p id="notice"><%= notice %></p>

<div class='row'>
  <div class='col-xs-12 col-sm-5 col-md-5'>
    <%if @user.avatar.blank? %>
      <%= image_tag('http://sunfieldfarm.org/wp-content/uploads/2014/02/profile-placeholder.png', class: 'polaroid') %>
    <% else %>
      <%= image_tag(@user.avatar.url(:medium), class: 'polaroid') %>
    <% end %>

    <p class='name'>
      <%= @user.name %>
    </p>

    <p class='josefin'>
      <%= link_to "Add Dog", new_user_dog_path(@user) %><br>
      <%= link_to "Create Playdate", new_user_playdate_path(@user) %>

    </p>

    <div class="panel list-group">
      <li class="list-group-item"><%= @user.city %><i class="fa fa-location-arrow pull-right" aria-hidden="true"></i></li>
      <li class="list-group-item" data-toggle="collapse" data-target="#sm" data-parent="#menu"><%= @user.name %>'s Playdates<span class='pull-right'>🐾</span></li>
      <div id="sm" class="sublinks collapse">
        <% @user.playdates.each do |playdate| %>
          <%= content_tag :li, playdate.title, id: "#{playdate.id}", class: ["list-group-item"] %>
        <% end %>
      </div>
      <li class="list-group-item" data-toggle="collapse" data-target="#sl" data-parent="#menu">Invites <i class="fa fa-envelope pull-right" aria-hidden="true"></i></li>
      <div id="sl" class="sublinks collapse">
       <li class="list-group-item"> x </li>
      </div>
    </div>
  </div>

  <div class='col-xs-12 col-sm-12 col-md-7'>
    <%= render 'dogs/show' %>
  </div>
  <div class='col-xs-12 col-sm-12 col-md-7'>
    <%= render 'playdates/show' %>
  </div>

</div>
